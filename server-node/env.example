# Service Configuration
SERVICE_NAME=forsion-backend-service
PORT=3001
NODE_ENV=development

# CORS Configuration (Multi-project support)
# Comma-separated list of additional allowed origins for production
# Example: ALLOWED_ORIGINS=https://studio.example.com,https://desktop.example.com
ALLOWED_ORIGINS=

# Database Configuration (MySQL - Shared across projects)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=forsion_shared_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Admin Default Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin123!@#

# Feature Toggles (Optional)
ENABLE_INVITE_CODES=true
ENABLE_CREDIT_SYSTEM=true







